<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleActivity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="DETALLE DEL CONDUCTOR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <RelativeLayout
        android:layout_width="365dp"
        android:layout_height="215dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="44dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="17dp"
            android:text="Nombre" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView9"
            android:layout_marginTop="57dp"
            android:text="Apellido" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView9"
            android:layout_centerVertical="true"
            android:text="Fecha de nacimiento" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView9"
            android:layout_marginBottom="55dp"
            android:text="Numero de autos" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView9"
            android:layout_marginBottom="19dp"
            android:text="Licencia valida" />

        <TextView
            android:id="@+id/text_nombre"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textView9"
            android:layout_marginStart="97dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/text_apellido"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/text_nombre"
            android:layout_alignTop="@+id/textView10"
            android:text="TextView" />

        <TextView
            android:id="@+id/text_fecha_nacimiento"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/text_nombre"
            android:layout_centerVertical="true"
            android:text="TextView" />

        <TextView
            android:id="@+id/text_numero_autos"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textView12"
            android:layout_marginStart="139dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/text_licencia"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView13"
            android:layout_toEndOf="@+id/textView12"
            android:text="TextView" />

        <Button
            android:id="@+id/button_nuevo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="19dp"
            android:text="Nuevo" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>