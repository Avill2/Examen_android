<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="388dp"
        android:layout_height="172dp">

        <TextView
            android:id="@+id/text_apellido"
            android:layout_width="210dp"
            android:layout_height="37dp"
            android:layout_alignStart="@+id/textView_numero_auto"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/textView_numero_auto"
            android:layout_width="209dp"
            android:layout_height="37dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="29dp" />

        <Button
            android:id="@+id/button_detalle"
            android:layout_width="106dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/text_apellido"
            android:layout_marginEnd="28dp"
            android:text="Detalle"
            tools:text="@string/btn_detalle" />

        <TextView
            android:id="@+id/text_nombre"
            android:layout_width="274dp"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="44dp"
            android:layout_marginTop="11dp" />
    </RelativeLayout>
</LinearLayout>
